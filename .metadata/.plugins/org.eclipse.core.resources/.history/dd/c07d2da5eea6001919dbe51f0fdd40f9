//DAO class has CRUD + Query methods 
public class ProductDAO {

	public static void save(Product toBeSaved) throws SQLException {
		// Insert

		try (Connection c = JdbcUtil.getConnection()) {

			Statement s = c.createStatement();
			// s.executeUpdate("Insert INTO product" + "VALUES (2,'Box',20,2)");
			String query1 = "Insert into product(product_id, product_name, product_price, product_qoh)"
					+ " values (1,'Box',20,2)";
			int count = s.executeUpdate(query1);
			System.out.println(count);

			String query2 = "Insert into product(product_id, product_name, product_price, product_qoh)"
					+ " values (2,'Pencil_Box',40,20.5)";
			count = s.executeUpdate(query2);
			System.out.println(count);

		} catch (Exception e) {
			// TODO: handle exception
			//System.out.println(e);
			e.printStackTrace();
		}
	}
