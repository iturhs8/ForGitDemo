//			System.out.println(count);
			String sql = "insert into product values("+p.getId()+",'"+p.getName()+"',"+p.getPrice()+","+p.getQoh()+")";
			String psql = "insert into product values(?,?,?,?)";
			PreparedStatement s = c.prepareStatement(psql);
			s.setInt(1, p.getId());
			s.setString(2, p.getName());
			s.setFloat(3, p.getPrice());
			s.setInt(4, p.getQoh());
			
	
			
			//Statement s = c.createStatement();
			s.executeUpdate();
			
			
			
		} catch (Exception e) {
			// TODO: handle exception
			//System.out.println(e);
			e.printStackTrace();
		}
	}
