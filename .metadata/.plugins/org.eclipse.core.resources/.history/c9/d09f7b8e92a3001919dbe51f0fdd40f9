	public static Double getCircleArea(Double radius) {
		Double area = Math.PI*radius*radius;
		return area;
	}
	
	

	public static void main(String[] args) { 
	ArrayList<Double> radius = new ArrayList<Double>();
	Iterator<Double> radiusIterator = radius.iterator(); 
	
	
	while(Math.random()>=0.01)
	{
		radius.add(Math.random());
	}
	System.out.println("Number of Elements"+radius.size());
	System.out.println("Area of Circle "+getCircleArea(radius.get(1))+"of radius"+radius.get(1));
	for(Double i : radius)
	{
		System.out.println("Area "+getCircleArea(i));
	}
	//iteratorremoval();
	while(radiusIterator.hasNext()) {
		System.out.println(radiusIterator.next());
			
		}
		for(Double i : radius)
		{
			System.out.println("Area "+getCircleArea(i));
		}
	}
	
