package com.visa.training.jdbc;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.List;

//DAO class has CRUD + Query methods 
public class ProductDAO {

	public static void save(Product p) throws SQLException {
		// Insert

		try (Connection c = JdbcUtil.getConnection()) {

			// String sql = "insert into product values(" + p.getId() + ",'" + p.getName() +
			// "'," + p.getPrice() + ","
			// + p.getQoh() + ")";
			String psql = "insert into product(product_name, product_price,product_qoh) values(?,?,?)";
			PreparedStatement s = c.prepareStatement(psql);
			s.setInt(1, p.getId());
			s.setString(2, p.getName());
			s.setFloat(3, p.getPrice());
			s.setInt(4, p.getQoh());

			s.executeUpdate();

		} catch (Exception e) {
			e.printStackTrace();
		}
	}
